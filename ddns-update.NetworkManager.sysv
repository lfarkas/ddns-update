#!/bin/sh

export LC_ALL=C

if [ "$2" = "down" ]; then
	/sbin/ip route ls | grep -q '^default' || {
		[ -f /var/lock/subsys/ddns-update ] && /sbin/service ddns-update stop || :
	} && { :; }
fi

if [ "$2" = "up" ]; then
	/sbin/ip -o route show dev "$1" | grep -q '^default' && {
		/sbin/chkconfig ddns-update && /sbin/service ddns-update start || :
	} || { :; }
fi
