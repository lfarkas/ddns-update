#!/bin/sh

export LC_ALL=C
PATH=/usr/sbin:/sbin:$PATH

if [ "$2" = "down" ]; then
	ip route ls | grep -q '^default' || {
		[ -f /var/lock/subsys/ddns-update ] && service ddns-update stop || :
	} && { :; }
fi

if [ "$2" = "up" ]; then
	ip -o route show dev "$1" | grep -q '^default' && {
		chkconfig ddns-update && service ddns-update start || :
	} || { :; }
fi

ddns-update
